<% include  ./partials/header%> 
<div class="application">
<div class='container'>
<form action='/application' method='post' class='col-md-6 col-md-offset-3'>
    <h1 class="animated tada">VEHICLE LICENSE APPLICATION</h1>
   <div class='form-group'>
    <label>Application Type</label>
    <select name='applicationType' class='form-control'>
        <option value="articulated vehicle">Articulated Vehicle</option>
        <option value="commercial">Commerical</option>
        <option value="private">Private</option>
        <option value="motorcycle">Motorcycle</option>
    </select>
</div> 
<div class='form-group'>
    <label for="scores">Driver Test's scores</label>
    <input type="number"  min="0" max="100"  name="scores" value="" class='form-control'>
</div>
<div class='form-group'>
    <label for="state">State of Application</label>
    <input type="text"  name="state" value="" class='form-control'>
</div>
<div class='form-group'>
    <label for="type">Status</label>
    <div class="radio">
        <label><input type="radio" value='First Time' name="status">First time</label>
    </div>
    <div class="radio">
         <label><input type="radio" value='renewal' name="status">Renewal</label>
    </div>
</div>
    <div class='form-group'>
    <label>Residential Address</label>
    <input id='address'type="text" name="location[address]" value="" class='form-control'>
</div>
<div class='form-group'>
    <label>Latitude</label>
    <input id = "lat" type="text" name="location[coordinates][1]" value="" class='form-control'>
</div>
<div class='form-group'>
    <label>Longitude</label>
    <input id="long" type="text" name="location[coordinates][0]" value="" class='form-control'>
</div>

<div class='form-group'>
    <button type="submit" class="btn btn-primary">Submit Application</button>
</div>
</form>
</div>

</div>
<% include  ./partials/footer%> 